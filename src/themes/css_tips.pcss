
html {
  box-sizing: border-box;
}

*, *::before, *::after {
  box-sizing: inherit;
}

// different approach from stylus
.clearFix::before, .clearFix::after {
  content: "";
  display: block;
}

.clearFix::after {
  clear: both;
}

.clearFix {
  clear: both;
  zoom: 1; /* For IE 6/7 (trigger hasLayout) */
}

